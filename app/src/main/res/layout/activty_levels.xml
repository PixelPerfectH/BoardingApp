<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/task5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toStartOf="@+id/button5"
        android:gravity="center"
        android:text="Знакомство с коллективом"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/rnslogo"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/task5"
        android:layout_toStartOf="@+id/button4"
        android:gravity="center"
        android:text="Обучение корпоративной культуре, понимманию ценностей компании"
        android:textAlignment="center"
         android:textColor="@color/black"/>

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button5"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/rnslogo"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/task4"
        android:layout_toStartOf="@+id/button3"
        android:gravity="center"
        android:text="Обучение по работе с внутренней системой управления проектами"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/rnslogo"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/task3"
        android:layout_toStartOf="@+id/button2"
        android:gravity="center"
        android:text="Ознакомление с инструкциями и регламентами работы в компании"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/rnslogo"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/task2"
        android:layout_toStartOf="@+id/button1"
        android:gravity="center"
        android:text="Обучение технике безопасности"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/rnslogo"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>