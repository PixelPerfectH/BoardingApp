<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20sp"
    android:layout_marginVertical="5sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        app:cardBackgroundColor="@color/white_blue"
        app:cardCornerRadius="15dp"

        >

        <LinearLayout
            android:id="@+id/eventLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:paddingHorizontal="5dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:ems="10"
                android:text="New lection about ecology"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:drawableBottomCompat="@color/purple_200" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="5dp"
                android:text="A big Lection about environment and the harm we do to it"
                android:textSize="20sp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/event"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:text="10.07.2003"
        android:textSize="15sp"
        android:layout_below="@id/event"
        android:textAlignment="viewEnd"
        />
</RelativeLayout>